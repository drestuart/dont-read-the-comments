{
  "manifest_version": 2,

  "name": "Don't Read The Comments!",
  "short_name": "DRTC!",
  "description": "Block out the comments section on YouTube and other sites",
  "version": "0.1",

  "permissions": [
    "webNavigation",
    "*://*/*",
    "storage"
  ],

  "background": {
    "scripts": ["install.js", "register.js"],
    // "page": "background.html",
    "persistent": true
  },

  "icons": {
    "16": "images/logo_drtc_16.png",
    "48": "images/logo_drtc_48.png",
    "128": "images/logo_drtc_128.png"
  },

  // Chrome <40
  "options_page": "options.html",

  // Chrome 40+
  "options_ui": {
    // Required.
    "page": "options.html",
    // Recommended.
    "chrome_style": true
  }
}